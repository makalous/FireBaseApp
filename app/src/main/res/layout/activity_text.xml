<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TextActivity">

    <com.wonderkiln.camerakit.CameraView
        android:id="@+id/camera_view2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.wonderkiln.camerakit.CameraView>

    <com.example.firebaseapp.GraphicOverlay
        android:id="@+id/graphic_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.example.firebaseapp.GraphicOverlay>

    <Button
        android:id="@+id/btn_recognize"
        android:text="Recognition"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Button>

</RelativeLayout>